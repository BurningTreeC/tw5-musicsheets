title: $:/plugins/BTC/musicsheets/ui/EditorToolbar/dropdown/A

\define get-note-a()
\whitespace trim
<$list filter="[[$:/state/musicsheets/note-values/]addsuffix<storyTiddler>get[prefix-suffix]] ~[[prefix]]" variable="prefix-suffix">
	<$list filter="[<prefix-suffix>match[prefix]]" variable="ignore">
		<$text text={{{ [[$:/state/musicsheets/note-values/]addsuffix<storyTiddler>get[text]] }}}/><$text text={{$(note-a)$}}/>
	</$list>
	<$list filter="[<prefix-suffix>match[suffix]]" variable="ignore">
		<$text text={{$(note-a)$}}/><$text text={{{ [[$:/state/musicsheets/note-values/]addsuffix<storyTiddler>get[text]] }}}/>
	</$list>
</$list>
\end
\define toolbar-button-note-a-inner()
<$button tag="a">
<$wikify name="text" text=<<get-note-a>>>
<$action-sendmessage
	$message="tm-edit-text-operation"
	$param="insert-text"
	text=<<text>>
/>
</$wikify>
<$action-deletetiddler
	$tiddler=<<dropdown-state>>
/>
<$text text={{{ [[$(note-a)$]get[caption]] }}}/>
</$button>
\end

<$list filter="[all[shadows+tiddlers]tag[$:/tags/MusicSheets/A]!is[draft]]" variable="note-a">
<<toolbar-button-note-a-inner>>
</$list>

